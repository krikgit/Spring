<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">
        
        <bean id="rect" class="com.krish.app.Rectangle">
        	<property name="pointA" ref="pointA"></property>
        	<property name="pointB" ref="pointB"></property>
        	<property name="pointC" ref="pointC"></property>
        	<property name="pointD" ref="pointD"></property>
        </bean>
        
        <bean id="triangle" class="com.krish.app.Triangle">
        	<property name="pointA" ref="pointA"></property>
        	<property name="pointB" ref="pointB"></property>
        	<property name="pointC" ref="pointC"></property>
        </bean>
        
        <bean id="circle" class="com.krish.app.Circle">
        	<property name="point" ref="pointA"/>
        </bean>
        
        <bean id="pointA" class="com.krish.app.Point">
        	<property name="x" value="0"/>
        	<property name="y" value="0"/>
        </bean>
        <bean id="pointB" class="com.krish.app.Point">
        	<property name="x" value="0"/>
        	<property name="y" value="-20"/>
        </bean>
        <bean id="pointC" class="com.krish.app.Point">
        	<property name="x" value="0"/>
        	<property name="y" value="20"/>
        </bean>
         <bean id="pointD" class="com.krish.app.Point">
        	<property name="x" value="10"/>
        	<property name="y" value="20"/>
        </bean>
        
</beans>